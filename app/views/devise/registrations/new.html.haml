%h2 Regístrate
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  = f.email_field :email, :autofocus => true, :placeholder => 'Tu email'
  = f.password_field :password, :placeholder => 'Elige una contraseña'
  = f.password_field :password_confirmation, :placeholder => 'Confirma la contraseña'
  = f.submit "Regístrate", :class => 'button success large-12'
  = render "devise/shared/links"
