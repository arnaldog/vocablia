.row
  %br
  %dl.sub-nav
    %dt Filter:
    %dd.active
      %a{:href => "#"} Calendario
    %dd
      %a{:href => "#"} Aprobadas
    %dd
      %a{:href => "#"} Pendientes
    %dd
      %a{:href => "#"} Rechazadas

  .row.text-center
    = calendar @words,  :start_day => :monday do |word|
      = link_to word.name, word
.row
  .row
    .small-6.large-6.columns
      %h1 Palabras
      %h2.subheader Listando de todo el catálogo
    .small-6.large-6.columns
      = render template: "words/_search"
      .right
        = foundation_paginate @Words
  %table
    %tr
      %th{:width => 50} Nombre
      %th{:width => 200} Descripción
      %th Ejemplo
      %th{:width => 150} Url
      %th
      %th
      %th

    - @words.each do |word|
      %tr
        %td= word.name
        %td= word.description
        %td= word.example
        %td
          %a.th.radius
            = image_tag word.icon.url
        %td= link_to 'Show', word, :class => 'button tiny'
        %td= link_to 'Edit', edit_word_path(word),  :class => 'button tiny'
        %td= link_to 'Destroy', word, :method => :delete, :data => { :confirm => 'Are you sure?' },  :class => 'button tiny alert'
  .pagination-centered
    = foundation_paginate @Words

  .row
    .small-6.large-6.columns
      %h2.subheader Vocablia
    .small-6.large-6.columns
      = render template: "words/_search"
      = link_to 'Create a new Vocablia Word', new_word_path, :class => 'button success large-12'

  

  
